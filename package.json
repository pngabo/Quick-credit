    "eslint": "^5.16.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "joi": "^14.3.1",
    "joi-phone-number": "^3.0.0",
    "jsonwebtoken": "^9.0.0",
    "make-runnable": "^1.3.6",
    "mocha": "^6.1.4",
    "moment": "^2.24.0",
    "nodemon": "^1.18.11",
    "nyc": "^14.1.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "swagger-ui-express": "^4.0.4",
    "underscore": "^1.9.1"
